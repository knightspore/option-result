{
    "name": "ciarancoza/option-result",
    "description": "Rust-like Option and Result Classes for PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ciarancoza\\OptionResult\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ciaran",
            "email": "cslemon96@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "laravel/pint": "^1.25",
        "phpdocumentor/phpdocumentor": "v3.9.0",
        "saggre/phpdocumentor-markdown": "^1.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests",
